<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <Button
        android:id="@+id/rec_seat_open"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:text="开台"
        app:layout_constraintStart_toEndOf="@+id/rec_seat_change"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rec_seat_clean"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="64dp"
        android:text="撤台"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rec_seat_change"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:text="换台"
        app:layout_constraintStart_toEndOf="@+id/rec_seat_clean"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rec_seat_id"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <TextView
        android:id="@+id/rec_seat_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rec_seat_cnt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/rec_seat_cnt"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rec_seat_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>