<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.ytu.jierui.store.mapper.CartMapper">

	<resultMap id="CartEntityMap" type="com.ytu.jierui.store.entity.Cart">
		<id column="cid" property="cid" />
		<result column="uid" property="uid" />
		<result column="pid" property="pid" />
		<result column="num" property="num" />
		<result column="price" property="price" />
		<result column="created_user" property="createdUser" />
		<result column="created_time" property="createdTime" />
		<result column="modified_user" property="modifiedUser" />
		<result column="modified_time" property="modifiedTime" />
	</resultMap>

	<!-- 向购物车数据表中插入数据 -->
	<!-- Integer save(Cart cart) -->
	<insert id="save" useGeneratedKeys="true" keyProperty="cid">
			INSERT INTO cart (
				uid, pid,
				num, price,
				created_user, created_time,
				modified_user, modified_time
			) VALUES (
				#{uid}, #{pid},
				#{num}, #{price},
				#{createdUser}, #{createdTime},
				#{modifiedUser}, #{modifiedTime}
			)
	</insert>

	<!-- 获取某用户在购物车中添加的某商品的数据 -->
	<!-- Cart findByUidAndPid(
        @Param("uid") Integer uid,
        @Param("pid") Integer pid) -->
	<select id="findByUidAndPid" resultMap="CartEntityMap">
			SELECT
				*
			FROM
				cart
			WHERE
				uid=#{uid} AND pid=#{pid}
	</select>

	<!-- 修改购物车表中商品的数量 -->
	<!-- Integer updateNum(
        @Param("cid") Integer cid,
        @Param("num") Integer num,
        @Param("modifiedUser") String modifiedUser,
        @Param("modifiedTime") Date modifiedTime) -->
	<update id="updateNum">
			UPDATE
				cart
			SET
				num=#{num},
				modified_user=#{modifiedUser},
				modified_time=#{modifiedTime}
			WHERE
				cid=#{cid}
	</update>

	<!-- 查询某用户的购物车数据列表 -->
	<!-- List<CartVO> findByUid(Integer uid) -->
	<select id="findByUid" resultType="com.ytu.jierui.store.vo.CartVO">
		SELECT
			cid, product.pid,
			uid, image, name,
			shop,cart.price,
			product.price AS realPrice,
			cart.num
		FROM
			cart
		LEFT JOIN
			product
		ON
			cart.pid=product.pid
		WHERE
			uid=#{uid}
		ORDER BY
			cart.created_time DESC
	</select>

	<!-- 根据购物车数据id查询购物车详情 -->
	<!-- Cart findByCid(Integer cid) -->
	<select id="findByCid" resultMap="CartEntityMap">
		SELECT
			*
		FROM
			cart
		WHERE
			cid=#{cid}
	</select>

	<!--Integer deleteByCid(Integer cid);-->
	<delete id="deleteByCid">
		DELETE FROM
        cart
        WHERE
        cid=#{cid}
	</delete>

	<!--通过uid删除所有购物车信息-->
	<!--Integer deleteByUid(Integer uid);-->
	<delete id="deleteByUid">
		DELETE FROM
        cart
        WHERE
        uid=#{uid}
	</delete>
</mapper>










